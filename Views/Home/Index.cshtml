@model IEnumerable<CalendarApp.Models.Event>
@{
    ViewData["Title"] = "Calendar App";
}

<h2>@ViewData["Title"]</h2>

<p>Selected Day: @ViewBag.SelectedDate.ToShortDateString()</p>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Location</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eventItem in Model)
        {
            <tr>
                <td>@eventItem.Title</td>
                <td>@eventItem.StartDate</td>
                <td>@eventItem.EndDate</td>
                <td>@eventItem.Location</td>
                <td>
                    <a asp-action="Edit" asp-controller="Events" asp-route-id="@eventItem.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Create" asp-controller="Events">Add New Event</a>
</p>
